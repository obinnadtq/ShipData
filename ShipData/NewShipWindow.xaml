<Window x:Class="ShipData.NewShipWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShipData"
        mc:Ignorable="d"
        Title="NewShipWindow" Height="400" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <Label Content="Ship Name:"/>
            <TextBox x:Name="shipNameTextBox"/>
            <Label Content="Ship Length (meters):"/>
            <TextBox x:Name="shipLengthTextBox"/>
            <Label Content="Ship Width (meters):"/>
            <TextBox x:Name="shipWidthTextBox"/>
            <Label Content="Ship Code:"/>
            <TextBox x:Name="shipCodeTextBox"
                     Margin="0,0,0,10"/>
            <Button Content="Save"
                    Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
